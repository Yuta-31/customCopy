{
  "name": "custom-copy",
  "displayName": "Custom Copy",
  "version": "2.1.0",
  "description": "コピーするときに任意の形式に整形できます。",
  "author": "yuta.ide.gt@outlook.jp",
  "scripts": {
    "dev": "vite",
    "build:ui": "tsc -b && vite build",
    "build:bg": "tsc -b && vite build --config vite.background.config.ts",
    "build": "cross-env NODE_ENV=development npm run build:ui && cross-env NODE_ENV=development npm run build:bg",
    "build:prod": "cross-env NODE_ENV=production npm run build:ui && cross-env NODE_ENV=production npm run build:bg",
    "lint": "eslint .",
    "test": "vitest"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "next-themes": "^0.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/chrome": "^0.1.28",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.14",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "jsdom": "^27.4.0",
    "sass": "^1.94.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.14"
  },
  "manifest": {
    "permissions": [
      "clipboardWrite",
      "contextMenus"
    ]
  }
}
