{
  "name": "custom-copy",
  "displayName": "Custom Copy",
  "version": "1.0.0",
  "description": "コピーするときに任意の形式に整形できます。",
  "author": "yuta.ide.gt@outlook.jp",
  "scripts": {
    "dev": "vite",
    "build:ui": "tsc -b && vite build",
    "build:bg": "tsc -b && vite build --config vite.background.config.ts",
    "build": "npm run build:ui && npm run build:bg",
    "lint": "eslint .",
    "test": "vitest"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/chrome": "^0.1.28",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "sass": "^1.94.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.14"
  },
  "manifest": {
    "permissions": [
      "clipboardWrite",
      "contextMenus"
    ]
  }
}
